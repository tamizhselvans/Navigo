generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Bus {
  id        Int      @id @default(autoincrement())
  number    String   @unique
  capacity  Int
  createdAt DateTime @default(now())

  schedules BusSchedule[]
}

model Route {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  start     String
  end       String
  createdAt DateTime @default(now())

  buses BusSchedule[]
  stops BusStop[]
}

model BusStop {
  id        Int      @id @default(autoincrement())
  routeId   Int // Foreign key to Route
  name      String // Name of the bus stop
  order     Int
  createdAt DateTime @default(now())

  route Route @relation(fields: [routeId], references: [id], onDelete: Cascade)
}

model BusSchedule {
  id            Int      @id @default(autoincrement())
  busId         Int
  routeId       Int
  date          DateTime
  status        String // Example: Running, Delayed, Cancelled
  departureTime String // Example: "08:30 AM"
  arrivalTime   String // Example: "10:45 AM"
  createdAt     DateTime @default(now())

  bus   Bus   @relation(fields: [busId], references: [id])
  route Route @relation(fields: [routeId], references: [id])
}
